        mc:Ignorable="d"
        Title="เพิ่มข้อมูลพนักงาน" Height="759" Width="1378" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Icon="iconapp.ico" WindowState="Maximized" xml:lang="th-TH">
