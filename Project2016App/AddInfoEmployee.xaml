        </Border>
        <Button x:Name="ChooseFile" Content="ค้นหารูปภาพ" HorizontalAlignment="Left" Margin="642,268,0,435" VerticalAlignment="Center" Width="74" Click="ChooseFile_Click" Height="27"/>
